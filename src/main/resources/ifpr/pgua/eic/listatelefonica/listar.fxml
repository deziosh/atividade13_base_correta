<?xml version="1.0" encoding="UTF-8"?>


<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<HBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      prefHeight="400" prefWidth="600"
      fx:controller="ifpr.pgua.eic.listatelefonica.controllers.JanelaListar"
      spacing="10.0"
      >

      <padding>
        <Insets topRightBottomLeft="20.0"/>
      </padding>

      <VBox spacing="10.0">
        <HBox spacing="10.0">
          <TextField fx:id="tfPesquisar"/>
          <Button text = "Pesquisar" prefWidth="80" onAction="#pesquisar"/>
        </HBox>

        <ListView fx:id="ltvContatos" onMouseClicked="#mostrarDetalhes" styleClass="lv"/>        
      </VBox>

      <VBox spacing="10.0">
        <TextArea fx:id="taDetalhes" editable="false" styleClass="detalhes"/>
      </VBox>
      
</HBox>
<?xml version="1.0" encoding="UTF-8"?>


<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10.0" 
      xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ifpr.pgua.eic.listatelefonica.controllers.JanelaCadastro">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <HBox spacing="22.0">
        <Label text="Nome: "/>
        <TextField fx:id="tfNome"/>
    </HBox>

    <HBox spacing="10.0">
        <Label text="Telefone: "/>
        <TextField fx:id="tfTelefone"/>  
    </HBox>

    <HBox spacing="30.0">
        <Label text="Email:"/>
        <TextField fx:id="tfEmail"/>  
    </HBox>

    <HBox>
        <Button text="Cadastrar" prefWidth="80" onAction="#cadastrar"/>
    </HBox>

</VBox>
